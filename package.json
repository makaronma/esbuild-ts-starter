{
  "name": "esbuild-ts-starter",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prepare": "pnpm script:build && pnpm build",
    "start": "node ./dist",
    "build": "node scripts/build.mjs",
    "build:watch": "node scripts/build.mjs -w",
    "dev": "node scripts/build.mjs -d",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist coverage",
    "script:build": "esbuild scripts/*.mts --outdir=scripts --target=node18 --supported:top-level-await=true --out-extension:.js=.mjs"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "18.15.3",
    "@types/nodemon": "^1.19.2",
    "esbuild": "^0.17.19",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "typescript": "^5.0.4"
  }
}
